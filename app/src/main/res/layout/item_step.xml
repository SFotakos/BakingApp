<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:id="@+id/linear_ingredients"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/material_baseline_grid_0.5x"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_stepCount"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="@dimen/material_typography_regular_subheading_text_size"
            android:gravity="center_vertical"
            android:textStyle="bold"
            android:layout_marginEnd="4dp"
            tools:text="1. "/>

        <TextView
            android:id="@+id/tv_stepDescription"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:textSize="@dimen/material_typography_regular_subheading_text_size"
            tools:text="Mix remaining ingredients" />
        
        <ImageView
            android:id="@+id/iv_video"
            android:layout_width="@dimen/material_baseline_grid_4.5x"
            android:layout_height="@dimen/material_baseline_grid_4.5x"
            android:contentDescription="@string/accessibility_item_step_video"/>

    </LinearLayout>
</layout>