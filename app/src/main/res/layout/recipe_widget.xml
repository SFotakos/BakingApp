<RelativeLayout
    android:id="@+id/rl_widget_root"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:clickable="true"
    android:focusable="true"
    android:padding="@dimen/material_baseline_grid_1x">

    <TextView
        android:id="@+id/tv_ingredientsLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_margin="@dimen/material_baseline_grid_1x"
        android:text="@string/ingredients"
        android:textColor="@color/colorAccent"
        android:textSize="@dimen/material_typography_regular_title_text_size"
        android:textStyle="bold|italic" />

</RelativeLayout>