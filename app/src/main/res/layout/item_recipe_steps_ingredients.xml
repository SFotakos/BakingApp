<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/linear_ingredientsSteps"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:id="@+id/cv_recipeIngredients"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="@dimen/material_baseline_grid_2x"
            android:layout_weight="1"
            app:cardCornerRadius="@dimen/material_card_corner_radius">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/material_baseline_grid_1x"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_ingredientsLabel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/ingredients"
                    android:textSize="@dimen/material_typography_regular_title_text_size"
                    android:textStyle="bold" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv_recipeIngredients"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/material_baseline_grid_0.5x"
                    android:fadeScrollbars="false"
                    android:scrollbarStyle="outsideInset"
                    android:scrollbars="vertical" />

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_recipeSteps"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="@dimen/material_baseline_grid_2x"
            android:layout_marginEnd="@dimen/material_baseline_grid_2x"
            android:layout_marginStart="@dimen/material_baseline_grid_2x"
            android:layout_weight="1"
            android:scrollbarStyle="outsideInset"
            android:scrollbars="vertical" />

    </LinearLayout>
</layout>