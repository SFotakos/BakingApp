<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:id="@+id/linear_ingredientsSteps"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@color/material_divider_color_light_theme"
        android:orientation="vertical"
        android:showDividers="middle">

        <android.support.v7.widget.CardView
            android:id="@+id/cv_recipeIngredients"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="@dimen/material_baseline_grid_2x"
            android:layout_weight="1"
            app:cardCornerRadius="@dimen/material_card_corner_radius">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/material_baseline_grid_1x"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_ingredientsLabel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/ingredients"
                    android:textSize="@dimen/material_typography_regular_headline_text_size" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv_recipeIngredients"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/material_baseline_grid_0.5x" />

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_recipeSteps"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="@dimen/material_baseline_grid_2x"
            android:layout_weight="1" />

    </LinearLayout>
</layout>